<%- include('header', {title: title}); %>
<div class="content">
    
    <!-- Start Content-->
    <div class="container-fluid">
        <div class="row page-title">
            <div class="col-md-12">
                <nav aria-label="breadcrumb" class="float-right mt-1">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/">Home</a></li>
                        <li class="breadcrumb-item"><a href="/inbox">Pesanan Masuk</a></li>
                    </ol>
                </nav>
                <h4 class="mb-1 mt-0">Pesanan Masuk</h4>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped mb-0">
                                <thead>
                                    <tr>
                                    <th scope="col">Nomor HP.</th>
                                    <th scope="col">Pesanan</th>
                                    <th scope="col">Waktu Pesan</th>
                                    <th scope="col">Aksi</th>
                                    </tr>
                                </thead>
                                <tbody id="tbody_inbox">                                    
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <td colspan="4">
                                            <div class="d-flex justify-content-center">
                                                <div id="div_pagination"></div>
                                            </div>
                                        </td>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- end row -->
        
        <div id="modal-process" class="modal" tabindex="-1" role="dialog">
          <div class="modal-dialog mw-100 w-75" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title">Lihat Detail Pesanan</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <div class="modal-body">
                <form id="form-process" class="needs-validation" novalidate>
                  <div class="form-row">
                    <div class="col-md-4 mb-3">
                      <label for="validationTooltip01">Nomor HP.</label>
                      <input type="text" id="input-chatid" class="form-control" id="validationTooltip01" placeholder="" value="" required>
                    </div>
                    <div class="col-md-4 mb-3">
                      <label for="validationTooltip01">Waktu Order</label>
                      <input id="input-ordertime" type="text" class="form-control" id="validationTooltip01" placeholder="" value="" required>
                    </div>
                  </div>
                  <div class="form-group">
                      <fieldset class="the-fieldset">
                          <legend class="the-legend">Pesanan Masuk</legend>
                          <div class="form-row">
                            <div class="col-md-2 mb-3">
                              <label for="validationDateTime">Tanggal / Jam</label>
                              <input id="input-datetime" type="text" class="form-control" id="validationDateTime" placeholder="" value="" required>
                            </div>
                            <div class="col-md-10 mb-3">
                              <label for="validationOrderMessage">Pesanan</label>
                              <textarea id="input-ordermessage" class="form-control"></textarea>
                            </div>
                            <div class="col-md-2 mb-3">
                              <label for="validationQuantity">Jumlah</label>
                              <input id="input-quantity" type="text" class="form-control" id="validationQuantity" placeholder="" value="" required>
                            </div>
                            <div class="col-md-4 mb-3">
                              <label for="validationQuantity">Nama Penerima</label>
                              <input id="input-recipientname" type="text" class="form-control" id="validationQuantity" placeholder="" value="" required>
                            </div>
                            <div class="col-md-3 mb-3">
                              <label for="validationCourier">Kurir</label>
                              <input id="input-courier" type="text" class="form-control" id="validationCourier" placeholder="" value="" required>
                            </div>
                            <div class="col-md-3 mb-3">
                              <label for="validationPhone">Nomor HP. Penerima</label>
                              <input id="input-phone" type="text" class="form-control" id="validationPhone" placeholder="" value="" required>
                            </div>
                            <div class="col-md-6 mb-3">
                              <label for="validationAddress">Alamat</label>
                              <textarea id="input-address" class="form-control" id="validationAddress"></textarea>
                            </div>
                            <div class="col-md-6 mb-3">
                              <label for="validationSenderName">Nama Pengirim</label>
                              <textarea id="input-sender-name" class="form-control" id="validationSenderName"></textarea>
                            </div>
                          </div>
                      </fieldset>
                   </div>
                   <input type="hidden" id="data-id" />
                  <button class="btn btn-sm btn-primary float-right" type="submit"><i class="fa fa-cog"></i> Kelola Pesanan</button>
                  <button type="button" class="btn btn-sm btn-secondary float-left" data-dismiss="modal">Close</button>
                </form>
              </div>
            </div>
          </div>
        </div>

    </div> <!-- container-fluid -->

</div> <!-- content -->
<%- include('footer', {footer_text: footer_text}); %>